<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- Dấu X xoá -->
    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Xoá" />

    <!-- Layout chứa ảnh và thông tin món -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/selectedCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/cartImageImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/bun" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cartFoodNameTextView"
                android:text="@string/hint_ten_mon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/quantityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/decreaseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_button" />



                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1">

                    <EditText
                        android:id="@+id/quantityEditText"
                        android:layout_width="50dp"
                        android:layout_height="32dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:maxLength="3"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingTop="@dimen/textview_padding"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/quantityTextView"
                        android:layout_width="50dp"
                        android:layout_height="32dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center"
                        android:paddingTop="@dimen/textview_padding"
                        android:textSize="12sp"
                        android:layout_gravity="fill_horizontal" />
                </GridLayout>

                <Button
                    android:id="@+id/increaseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_button" />
            </LinearLayout>


            <TextView
                android:id="@+id/cartTotalPriceTextView"
                android:text="@string/label_tong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
